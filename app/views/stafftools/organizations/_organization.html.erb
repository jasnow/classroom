<div class="classroom-resource-item">
  <%= image_tag github_avatar_url(organization.github_id, 96), height: 48, width: 48, class: 'avatar left', alt: "@#{organization.login}" %>

  <%= link_to stafftools_organization_path(organization.id) do %>
    <strong class="search-result-title"><%= organization.login %></strong>
  <% end %>

  <span class="text-muted css-truncate css-truncate-target">Added <%= local_time_ago(organization.created_at) %></span><br>
</div>
